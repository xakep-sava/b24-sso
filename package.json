{
  "name": "@b24/sso",
  "version": "1.1.0",
  "description": "SSO - react component for b24 projects (b24online.com)",
  "author": "Vladimir Savrov <i@sava.team> (https://sava.team)",
  "license": "LGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:xakep-sava/sso.git"
  },
  "bugs": {
    "url": "https://github.com/xakep-sava/sso/issues"
  },
  "homepage": "https://github.com/xakep-sava/sso/tree/master/#readme",
  "keywords": [
    "sso",
    "b24",
    "react",
    "single sign-on"
  ],
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w && npm run prettier-watch",
    "lint": "tslint 'src/**/*.ts?(x)' 'test/**/*.ts?(x)' 'tools/**/*.ts?(x)'",
    "format": "prettier --write --ignore-path .prettierignore --check \"**/*.*\"",
    "validate": "yarn lint",
    "release": "yarn run build && npm publish --access public",
    "prepublishOnly": "npm run validate"
  },
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "files": [
    "dist",
    "src"
  ],
  "types": "lib/index.d.ts",
  "peerDependencies": {
    "classnames": ">=2",
    "formik": ">=2",
    "i18next": ">=19",
    "i18next-browser-languagedetector": ">=4",
    "jsonwebtoken": "^8.5.1",
    "normalize": ">=0.3.1",
    "prop-types": ">=15",
    "react": ">=16",
    "react-i18next": ">=11",
    "react-inlinesvg": ">=1",
    "react-jss": ">=10",
    "react-tooltip": ">=4",
    "yup": ">=0.28"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "formik": "^2.1.4",
    "i18next": "^19.4.3",
    "i18next-browser-languagedetector": "^4.1.1",
    "jsonwebtoken": "^8.5.1",
    "normalize": "^0.3.1",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-i18next": "^11.3.5",
    "react-inlinesvg": "^1.2.0",
    "react-jss": "^10.1.1",
    "react-tooltip": "^4.2.5",
    "yup": "^0.28.4"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^4.0.3",
    "@svgr/rollup": "^5.3.1",
    "@types/classnames": "^2.2.10",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/react": "^16.9.34",
    "@types/react-jss": "^10.0.0",
    "@types/react-tooltip": "^3.11.0",
    "@types/yup": "^0.28.0",
    "prettier": "^2.0.5",
    "rollup": "^2.7.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.2",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript3": "^1.1.2",
    "rollup-plugin-url": "^3.0.1",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^5.0.0",
    "typescript": "^3.8.3"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "printWidth": 120,
    "trailingComma": "none",
    "arrowParens": "avoid"
  }
}
